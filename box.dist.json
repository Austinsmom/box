{
    "alias": "box.phar",
    "chmod": "0755",
    "directories": ["src/lib"],
    "files": [
        "res/schema.json",
        "src/autoload.php"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": ["Tests", "tests"],
            "in": "src/vendors"
        }
    ],
    "git-version": "package_version",
    "main": "bin/box",
    "output": "box.phar",
    "replacements": {
        "manifest_url": "http://box-project.org/manifest.json",
        "update_matcher": "/box\\-(.+?)\\.phar/",
        "update_url": "https://api.github.com/repos/kherge/Box"
    },
    "stub": true
}
